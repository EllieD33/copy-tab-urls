{
  "manifest_version": 2,
  "name": "CopyTabUrls",
  "version": "1.0",
  "description": "Copies URLs from open tabs to clipboard.",
  "icons": {
    "48": "icons/copy_all_light.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "theme",
    "storage"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/copy_all_light.png"
    },
    "default_title": "Copy Tab URLs"
  },
  "options_page": "options.html"
}

