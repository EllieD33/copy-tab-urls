{
  "manifest_version": 2,
  "name": "CopyTabUrls",
  "version": "2.0",
  "description": "Copies URLs from open tabs to clipboard.",
  "icons": {
    "48": "icons/copy_all_light.png"
  },
  "permissions": [
    "tabs",
    "clipboardWrite",
    "theme",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": {
      "48": "icons/copy_all_light.png"
    },
    "default_title": "Copy Tab URLs"
  },
  "options_ui": {
      "page": "options.html",
      "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "6766c4d7-0076-48de-b9da-82de7a56cc06@myextension.com"
    }
  }
}

